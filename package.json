{
    "name": "castaway",
    "version": "1.0.0",
    "description": "Personal music streaming application",
    "scripts": {
      "docker:up": "docker-compose up -d",
      "docker:down": "docker-compose down",
      "docker:restart": "docker-compose restart backend",
      "docker:rebuild": "docker-compose up --build -d",
      "docker:fresh": "docker-compose down && docker-compose up --build -d",
      "docker:logs": "docker-compose logs -f backend",
      "docker:logs:all": "docker-compose logs -f",
      "docker:clean": "docker-compose down -v",
      "docker:backend": "docker-compose restart backend && docker-compose logs -f backend",
      "dev": "docker-compose up",
      "dev:build": "docker-compose up --build"
    },
    "private": true
  }