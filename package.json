  "scripts": {
    "start": "bun run src/main.ts",
    "start:dev": "nodemon",
    "start:prod": "bun run dist/main.js",
    "build": "bun build src/main.ts --outdir ./dist --target node",
    "prisma:dev:deploy": "prisma migrate deploy",
    "db:dev:rm": "docker compose rm -s -v -f db",
    "db:dev:up": "docker compose up -d db",
    "db:dev:restart": "bun run db:dev:rm && bun run db:dev:up && sleep 1 && bun run prisma:dev:deploy"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.16",
